<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Configuración del documento -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Enlaces a hojas de estilo externas -->
  <link rel="stylesheet" href="/css/home.css" />
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <!-- Enlaces a scripts externos -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <!-- Título de la página -->
  <title>Digital Commerce - Home</title>
</head>

<body>
  <!-- Encabezado de la página -->
  <header class="header">
    <div class="top-header">
      <!-- Logo de la empresa -->
      <img class="logo" src="/images/Logodc.png" alt="Logo de la empresa">

      <!-- Barra de búsqueda -->
      <div class="busqueda">
        <input class="barra-busqueda" type="text" placeholder="Buscar productos, marcas">
        <button-type class="boton-busqueda"><i class="fa-solid fa-magnifying-glass"></i></button>
      </div>

      <!-- Botón de inicio de sesión -->
      <div class="login">
        <button-type class="boton-login">
          <a href="/login">INICIAR SESIÓN<i class="fas fa-sign-in-alt"></i></a>
        </button>
      </div>

      <!-- Icono de carrito de compras -->
      <div class="carrito">
        <button-type class="boton-carrito">
          <i class="fa-solid fa-basket-shopping"></i>
        </button>
      </div>
    </div>
  </header>

  <!-- Contenido principal de la página -->
  <main class="main">
    <div class="main__container">
      <!-- Contenedor de productos -->
      <div class="main__productos-container">
        <!-- Producto 1 -->
        <div class="main__producto">
          <div class="main__producto-img">
            <img src="/public/images/auri.logi.png" alt="Auriculares sección de producto">
          </div>
          <div class="main__producto-detalles">
            <p>Auriculares Logitech <span>$32.000</span></p>
            <div class="main__producto-cantidad">
              <button-name><i class="fa-solid fa-plus"></i></button>
              <p>1</p>
              <button-name><i class="fa-solid fa-minus"></i></button>
              <button-type><i class="fa-solid fa-trash"></i></button>
            </div>
          </div>
        </div>

        <!-- Productos adicionales (repetidos para demostración) -->
        <!-- Producto 2 -->
        <!-- Producto 3 -->
        <!-- Producto 4 -->
      </div>

      <!-- Detalles y método de pago -->
            <div class="main__detalles-container">
        <!-- Total de la compra y detalles -->
        <div class="main__total-pago">
          <p class="main__total"><span>Total: </span>$50.000</p>
          <p class="main__subtotal"><span>Subtotal: </span>$50.000</p>
          <div>
            <p class="main__descuento"><span>Descuento: </span>$0</p>
            <a href="#" class="main__cupon-descuento">Agregar cupón de descuento</a>
          </div>
        </div>

        <!-- Métodos de pago -->
        <div class="main__metodo-pago">
          <form action="">
            <div class="metodo__pago-tarjeta">
              <i class="fa-solid fa-credit-card"></i>
              <label for="">Tarjeta de crédito</label>
              <input type="checkbox" name="pago-tarjeta" id="pago-tarjeta" value="pago-tarjeta">
            </div>
            <!-- Más métodos de pago -->
            <input type="submit" value="Realizar compra" class="main__button-pagar">
          </form>
        </div>

        <!-- Enlace para calcular costo de envío -->
        <a href="#" class="main__calcular-costo-envio">Calcular costo de envío</a>
      </div>
    </div>
  </main>

  <!-- Pie de página de la página -->
  <footer class="footer">
    <div class="footer__container container">
      <!-- Redes sociales -->
      <div class="footer__social-networks">
        <h3>NUESTRAS REDES SOCIALES</h3>
        <div>
          <i class="fa-brands fa-facebook"></i>
          <i class="fa-brands fa-square-instagram"></i>
          <i class="fa-brands fa-square-x-twitter"></i>
        </div>
      </div>

      <!-- Información de contacto -->
      <div class="footer__contacto">
        <h3>CONTACTO</h3>
        <p><i class="fa-solid fa-envelope"></i>Dcommerce@gmail.com</p>
        <p><i class="fa-brands fa-square-whatsapp"></i>09122018</p>
        <p><i class="fa-solid fa-compass"></i>Av. Roca 912</p>
      </div>

      <!-- Métodos de pago aceptados -->
      <div class="footer__methods">
        <div>
          <h3>MEDIOS DE PAGO</h3>
          <img src="images/pagos.png" alt="medios de pago" />
        </div>
      </div>
    </div>
  </footer>

  <!-- Script para cambiar la imagen activa en mouseover -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const images = document.querySelectorAll("section img");

      images.forEach(image => {
        image.addEventListener("mouseover", function () {
          images.forEach(img => img.classList.remove("active"));
          this.classList.add("active");
        });
      });
    });
  </script>
</body>
</html>
