<!doctype html>
<html lang="es">

  <%- include('./partials/head.ejs') %>    

<body>

  <%- include('./partials/header.ejs')%>
    <main class="container-fluid p-0">
      
      <!--Administrador de usuarios-->
      <br>
      <section class="row">
        <article class="col-12 ">
          <h2 class="display-5  text-center pt-2">Usuarios</h2>
        </article>

        <article class="col-12">
          <a href="/users/create/"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
        </article>

        <article class="col-12" >
        <table class=" table ">
            <thead>
              <tr>  
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Ver</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
              </tr>
            </thead>

            <tbody>
              <% usuarios.forEach(usuario => { %>
              <tr>
                <td><%= usuario.id%> </td>
                <td><%= usuario.firstName%> </td>
                <td><%= usuario.lastName%> </td>
                <td><a href="/users/detail/<%= usuario.id%>"> <ion-icon name="eye-outline"></ion-icon></a></td>
                <td><a href="/users/<%= usuario.id%>/edit"> <ion-icon name="pencil-outline"></ion-icon></a></td>
                <td><a href="/users/delete/<%= usuario.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
              </tr>
              <% }); %>
            </tbody>

          </table> 
        </article>       
      </section>

      <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>

    </main>

    <%- include('./partials/footer.ejs')%>
    
  </body>
</html>