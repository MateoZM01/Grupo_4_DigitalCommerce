<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
  <!-- Encabezado de la página -->
  <%- include('./partials/header') %>

    <!-- Contenido principal de la página -->
    <main class="main">

      <!-- Formulario de inicio de sesión -->
      <div class="card-login">
        <h1>Iniciar sesión</h1>
        <div class="errores">
          <ul></ul>
        </div>
        <form action="/login" method="POST" class="formulogin">
          <br>
          <!-- Campos de usuario y contraseña -->
          <input class="email" type="email" name="email" placeholder="Ingresa tu email">
          <br>
          <br>
          <input class="contraseña" type="password" name="contrasenia" placeholder="Ingresa tu contraseña">
          <br>
          <br>
          <br>
          <button class="botón" type="submit">Ingresar</button>
          <br>
          <br>
          <button class="botón" type="submit"><a href="/register">Registrarse</a></button>
      </div>

    </main>

    <!-- Pie de página -->
    <%- include('./partials/footer.ejs')%>

    <script src="/js/validationsLogin.js"></script>

</body>

</html>