      <!-- Carrusel de imágenes -->
      <div style="display: grid; place-items: center">
        <section class="carousel">
          <img class="coursel_img" src="images/products/cooler-cpu.png" alt="" />
          <img class="coursel_img" src="images/products/GAB148-jpg.png" alt="" />
          <img class="coursel_img active" src="images/products/rtx-4090.png" alt="" />
          <img class="coursel_img" src="images/products/procesador-Amd-Ryzen-9-7900X.png" alt="" />
          <img class="coursel_img" src="images/products/memoria-m2.png" alt="" />
          <img class="coursel_img" src="images/products/MEMORIADDR5.png" alt="" />
        </section>
      </div>

      <!-- Contenido principal -->
      <main class="main-container">
        <h2 class="main__heading">NUEVOS LANZAMIENTOS</h2>
        <div class="main__products-container">
          <!-- Producto 1 -->
          <div class="main__product">
            <img class="main__product-img" src="images/products/teclado_red.png" alt="imagen teclado" />
